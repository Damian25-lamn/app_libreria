<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.programacion.avanzada.bookstoreapp.controller.WelcomeController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f0f0f0;"
      prefWidth="500" prefHeight="300">

    <Label text="Bienvenido a BookStoreApp" style="-fx-font-size: 24px; -fx-text-fill: #2a2a8b;" />
    <Button text="Acceder" fx:id="accederButton"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14px;" />
</VBox>

