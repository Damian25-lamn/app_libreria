<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.programacion.avanzada.bookstoreapp.controller.InventoryCrudController">

    <Label text="Gestión de Inventario" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="tableInventory" prefHeight="200">
        <columns>
            <TableColumn fx:id="isbnColumn" text="ISBN Libro" prefWidth="200"/>
            <TableColumn fx:id="soldColumn" text="Vendidos" prefWidth="100"/>
            <TableColumn fx:id="suppliedColumn" text="Suministrados" prefWidth="100"/>
        </columns>
    </TableView>

    <GridPane hgap="5" vgap="5">
        <!-- Fila 0: ISBN -->
        <Label text="ISBN Libro:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="isbnField" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

        <!-- Fila 1: Vendidos -->
        <Label text="Vendidos:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="soldField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Fila 2: Suministrados -->
        <Label text="Suministrados:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="suppliedField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Nuevo" onAction="#onNewInventory" style="-fx-min-width: 80;"/>
        <Button text="Guardar" onAction="#onSaveInventory" style="-fx-min-width: 80;"/>
        <Button text="Actualizar" onAction="#onUpdateInventory" style="-fx-min-width: 80;"/>
        <Button text="Eliminar" onAction="#onDeleteInventory" style="-fx-min-width: 80;"/>
        <Button text="Volver al Menú" onAction="#onBackToMenu" style="-fx-min-width: 100;"/>
    </HBox>
</VBox>
