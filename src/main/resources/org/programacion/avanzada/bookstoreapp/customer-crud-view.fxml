<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.programacion.avanzada.bookstoreapp.controller.CustomerCrudController">
    <Label text="CRUD Clientes" style="-fx-font-size: 18px;"/>

    <TableView fx:id="tableCustomers" prefHeight="400" prefWidth="500">
        <columns>
            <TableColumn text="ID"     prefWidth="100" fx:id="idColumn"/>
            <TableColumn text="Nombre" prefWidth="200" fx:id="nameColumn"/>
            <TableColumn text="Email"  prefWidth="200" fx:id="emailColumn"/>
        </columns>
    </TableView>

    <HBox spacing="5">
        <TextField fx:id="idField"    promptText="ID"     prefWidth="100"/>
        <TextField fx:id="nameField"  promptText="Nombre" prefWidth="200"/>
        <TextField fx:id="emailField" promptText="Email"  prefWidth="200"/>
    </HBox>

    <HBox spacing="5">
        <Button text="Guardar" onAction="#onSaveCustomer"/>
        <Button text="Eliminar" onAction="#onDeleteCustomer"/>
    </HBox>
</VBox>
